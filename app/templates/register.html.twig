{% extends "base.html.twig" %}

{% block body %}
    <h1>Crée votre compte</h1>

    <form action="" method="post">
        <div>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Entrez votre email" required />
        </div>
        <div>
            <label for="email_cfg">Confirmation email</label>
            <input type="email" name="email_cfg" id="email_cfg" placeholder="Confirmation votre email" required />
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Entrez un mot de passe" required />
        </div>
        <div>
            <label for="password_cfg">Confirmation Password</label>
            <input type="password" name="password_cfg" id="password_cfg" placeholder="Confirmer votre mot de passe" required />
        </div>
        <div>
            <input type="submit" name="send" value="Crée le compte" />
        </div>
    </form>

    <p>
        <a href="index.php">Déjà un compte ?</a>
    </p> 
{% endblock %}

